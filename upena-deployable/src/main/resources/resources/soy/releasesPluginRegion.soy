{namespace soy.page}

/**
 * @param? message
 * @param? filters
 * @param? releases
 * @param? readWrite
 */
{template .releasesPluginRegion}
    {if $releases}
        <div class="upena-panel">
            <div class="upena-heading"><span class="upena-title">Release</span></div>
            {if $message}
                <pre>{$message}</pre>
            {/if}
            {call .releasesPluginRegionList}
                {param releases: $releases /}
                {param filters: $filters /}
                {param readWrite: $readWrite /}
            {/call}
        </div>
    {/if}
{/template}

/**
 * @param? releases
 * @param? filters
 * @param? readWrite
 */
{template .releasesPluginRegionList}
    <table class="table table-hover float-table-head table-condensed table-responsive">
        <thead class="upena-thead">
            <tr>
                <th>Instances</th>
                <th>Name</th>
                <th>Config</th>
                <th>Actions</th>
            </tr>
            {if $filters}
                <form id="add-host" class="j-form" data-active-class="btn-default" data-input-el="#requestPicker" data-form-el="#requestPickerForm"
                    data-jive-ui="jive/ui/typeahead/request_typeahead" method="post" name="addHost">
                    <tr style="background-color:#ddd;">
                        <td>
                        </td>
                        <td>
                            <input type="text" autocomplete="off" role="combobox" style="padding-left:10px;"
                                placeholder="Name" value="{$filters.name?:''}" name="name" id="namePicker" class="form-control">
                            <input type="text" autocomplete="off" role="combobox" style="padding-left:10px;"
                            placeholder="Repository" value="{$filters.repository?:''}" name="repository" id="descriptionPicker" class="form-control">
                            <input type="text" autocomplete="off" role="combobox" style="padding-left:10px;"
                            placeholder="Version" value="{$filters.version?:''}" name="version" id="descriptionPicker" class="form-control">
                            Autorelease<input type="checkbox" name="autoRelease" value="true" {if $filters.autoRelease}checked="checked"{/if}>
                        </td>
                        <td></td>
                        <td>
                            <button title="Filter" type="submit" name="action" value="filter" class="btn btn-primary ladda-button"  data-spinner-color="#222" data-style="expand-right"><span class="glyphicon glyphicon-search">&nbsp;Filter</span></button>
                            {if $readWrite}
                                <button title="Add" type="submit" name="action" value="add" class="btn btn-default ladda-button"  data-spinner-color="#222" data-style="expand-right"><span class="glyphicon glyphicon-plus">&nbsp;Add</span></button>
                                <button title="Export" type="submit" name="action" value="export" class="btn btn-default"><span class="glyphicon glyphicon-export">&nbsp;Export</span></button>
                                <button onclick="return confirm('Are you sure you want to upgrade all releases?')" title="Upgrade All" type="submit" name="action" value="upgrade-all" class="btn btn-default"><span class="glyphicon glyphicon-fast-forward">&nbsp;Upgrade-All</span></button>
                            {/if}
                        </td>
                    </tr>
                </form>
            {/if}
        </thead>
        <tbody>
            {foreach $r in $releases}
                <tr>
                    <td>
                        {foreach $ic in $r.instanceCounts}
                            <div title="ServiceName" class="coloredBox" style="background-color:rgba({$ic.color},0.4);">{$ic.count}</div>
                        {/foreach}
                    </td>
                    <td>
                        <ul style="list-style-type:none">
                            <li>
                                <div style="display: inline;">
                                    <a href="#" rel="popover" id="popoverAnchor-release-{$r.key}" data-popover-content="#popover-release-{$r.key}" data-placement="bottom" class="btn btn-default" title="{$r.name} @ {$r.version?:''}">
                                        <span class="glyphicon glyphicon-menu-down">{sp}{$r.name}{sp}@{sp}{$r.version?:''}</span>
                                    </a>
                                </div>
                                <div id="popover-release-{$r.key}" class="hide">
                                    <ul style="list-style-type:none">
                                        {if $r.rollback}
                                            {if $readWrite}
                                                <li>
                                                    <form id="edit-{$r.key}" class="j-form" data-active-class="btn-default" data-input-el="#requestPicker" data-form-el="#requestPickerForm"
                                                        method="post" name="roleback">
                                                        <input type="hidden" name="key" value="{$r.key}">
                                                        <input type="hidden" name="name" value="{$r.name}">
                                                        <input type="hidden" name="repository" value="{$r.repository}">
                                                        <input type="hidden" name="version" value="{$r.version}">
                                                        <div style="display: inline;">{$r.rollback}&nbsp;&nbsp;&nbsp;</div>
                                                        <div style="display: inline;"><input type="hidden" name="rollback" value="{$r.rollback}"></div>
                                                        <div style="display: inline;">
                                                            <button onclick="return confirm('Are you sure you want to rollback?')" title="Rollback" type="submit" name="action" value="rollback" class="btn btn-default" style="color: orange;">Rollback</button>
                                                        </div>
                                                    </form>
                                                </li>
                                            {/if}
                                        {/if}
                                        <form id="edit-{$r.key}" class="j-form" data-active-class="btn-default" data-input-el="#requestPicker" data-form-el="#requestPickerForm"
                                            method="post" name="updateRelease">

                                                <li>Name:<input type="hidden" name="key" value="{$r.key}"></li>
                                                <li><input type="text" autocomplete="off" role="combobox" style="padding-left:10px;" placeholder="Name" value="{$r.name}" name="name" id="namePicker" class="form-control"></li>

                                                <li>Repository:</li>
                                                <li><input type="text" name="repository" class="form-control" value={$r.repository?:''}></li>

                                                <li>groupId:artifactId:type:version</li>
                                                <li><input size="256" id="{$r.key}" type="text" name="version" class="form-control" value={$r.version?:''}></li>

                                                <li>Auto release:<input type="checkbox" name="autoRelease" value="true" {if $r.autoRelease}checked="checked"{/if}></li>
                                                {if $readWrite}
                                                    <li><button title="Upgrade" type="submit" name="action" value="update" class="btn btn-default">Update</button></li>
                                                {/if}
                                        </form>
                                    </ul>
                                </div>
                            </li>
                            {if $r.runningLatest}
                                {if $r.runningLatest != 'true'}
                                    {if $readWrite}
                                        <li>
                                            <form id="edit-{$r.key}" class="j-form" data-active-class="btn-default" data-input-el="#requestPicker" data-form-el="#requestPickerForm"
                                                method="post" name="upgrade">
                                                <input type="hidden" name="key" value="{$r.key}">
                                                <input type="hidden" name="name" value="{$r.name}">
                                                <input type="hidden" name="repository" value="{$r.repository}">
                                                <input type="hidden" name="version" value="{$r.version}">
                                                <div>
                                                    <div style="display: inline;">{$r.upgrade}&nbsp;&nbsp;&nbsp;</div>
                                                    <input type="hidden" name="upgrade" value="{$r.upgrade}">
                                                    <div style="display: inline;">
                                                        <button title="Rolling Upgrade" type="submit" name="action" value="rolling-upgrade" class="btn btn-default" style="color: green;">Rolling</button>
                                                    </div>
                                                    <div style="display: inline;">
                                                        <button title="Upgrade" type="submit" name="action" value="upgrade" class="btn btn-default" style="color: green;">Upgrade</button>
                                                    </div>
                                                </div>
                                            </form>
                                        </li>
                                    {/if}
                                {/if}
                            {/if}
                        </ul>
                    </td>
                    <td>
                        <a href="#" rel="popover" id="propertyPopoverAnchor-config-{$r.key}" data-popover-content="#propertyPopover-config-{$r.key}" data-placement="left" class="btn btn-primary" title="Config">
                            <span class="glyphicon glyphicon-menu-down"></span>Config
                        </a>
                        <div id="propertyPopover-config-{$r.key}" class="hide" style="overflow:scroll; height:400px;">
                            <table>
                                <thead>
                                    <tr>
                                        <th>Property</th>
                                        <th>Value</th>
                                        <th>Default</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {if $readWrite}
                                        <tr>
                                            <td>
                                                <input type="text" id="propertyName-{$r.key}" style="padding-left:10px;"
                                                    placeholder="property name" value="">
                                            </td>
                                            <td>
                                                <input type="text" id="propertyValue-{$r.key}" style="padding-left:10px;"
                                                    placeholder="property value" value="">
                                            </td>
                                            <td>
                                                <button title="Add" onClick="upena.release.addProperty('{$r.key}')" class="btn btn-default"><span class="glyphicon glyphicon-plus">&nbspAdd</span></button>
                                            </td>
                                        </tr>
                                    {/if}
                                    {foreach $nv in $r.properties}
                                        <tr>
                                            <td>
                                                {$nv.name}
                                            </td>
                                            <td>
                                                {$nv.value}
                                            </td>
                                            <td>
                                                {$nv.default}
                                            </td>
                                            <td>
                                                {if $readWrite}
                                                    <button title="Remove" onClick="upena.release.removeProperty('{$r.key}', '{$nv.name}', '{$nv.value}')" class="btn btn-default">
                                                        <span class="glyphicon glyphicon-trash">&nbspRemove</span>
                                                    </button>
                                                {/if}
                                            </td>
                                        </tr>
                                    {/foreach}
                                </tbody>
                            </table>
                        </div>
                    </td>
                    <td>
                        {if $readWrite}
                            <form id="edit-{$r.key}" class="j-form" data-active-class="btn-default" data-input-el="#requestPicker" data-form-el="#requestPickerForm"
                             method="post" name="editHost">
                                    <input type="hidden" name="key" value="{$r.key}">
                                    <input type="hidden" name="name" value="{$r.name}">
                                    <input type="hidden" name="repository" value="{$r.repository}">
                                    <input type="hidden" name="version" value="{$r.version}">
                                    <button onclick="return confirm('Are you sure you want to delete?')" title="Remove" type="submit" name="action" value="remove" class="btn btn-default"><span class="glyphicon glyphicon-trash">&nbsp;Remove</span></button>
                            </form>
                        {/if}
                    <td>
                </tr>
            {/foreach}
        </tbody>
    </table>
    {if $readWrite}
        <div class="btn-group" role="group" aria-label="...">
            <form method="post" action="/ui/releases/import" enctype="multipart/form-data">
                <div class="fileinput fileinput-new" data-provides="fileinput">
                    <span class="btn btn-default btn-file"><span>Browse...</span><input type="file" name="file"/></span>
                    <span class="fileinput-filename"></span><span class="fileinput-new">&nbsp;&nbsp;&nbsp;No file chosen&nbsp;&nbsp;&nbsp;</span>
                </div>
                <button title="Import" type="submit"  value="import" class="btn btn-default"><span class="glyphicon glyphicon-import">&nbsp;Import</span></button>
            </form>
        </div>
    {/if}
{/template}
