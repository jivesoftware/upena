{namespace soy.page}

/**
 * 
 * @param? message
 * @param? filters
 * @param? services
 */
{template .servicesPluginRegion}
    {if $services}
        <div class="upena-panel">
            <div class="upena-heading"><span class="upena-title">Services</span></div>
            {if $message}
                <pre>{$message}</pre>
            {/if}
            <table class="table table-hover float-table-head table-condensed table-responsive">
                <thead>
                    <tr>
                        <th>Instances</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <form id="add-host" class="j-form" data-active-class="btn-default" data-input-el="#requestPicker" data-form-el="#requestPickerForm"
                        data-jive-ui="jive/ui/typeahead/request_typeahead" method="post" name="addHost">
                        <tr style="background-color:#ddd;">
                            <td>
                            </td>
                            <td style="width:400px;">
                                <div>
                                    <input type="text" autocomplete="off" role="combobox" style="padding-left:10px;"
                                        placeholder="Name" value="{$filters.name?:''}" name="name" id="namePicker" class="form-control">
                                </div>
                            </td>
                            <td>
                                <input type="text" autocomplete="off" role="combobox" style="padding-left:10px;"
                                placeholder="Description" value="{$filters.description?:''}" name="description" id="descriptionPicker" class="form-control">
                            </td>
                            <td>
                                <button title="Filter" type="submit" name="action" value="filter" class="btn btn-primary ladda-button"  data-spinner-color="#222" data-style="expand-right"><span class="glyphicon glyphicon-search">&nbspFilter</span></button>
                                <button title="Add" type="submit" name="action" value="add" class="btn btn-default ladda-button"  data-spinner-color="#222" data-style="expand-right"><span class="glyphicon glyphicon-plus">&nbspAdd</span></button>
                                <button title="Export" type="submit" name="action" value="export" class="btn btn-default"><span class="glyphicon glyphicon-export">&nbspExport</span></button>
                            <td>
                        </tr>
                    </form>

                    {foreach $s in $services}
                        <form id="edit-host" class="j-form" data-active-class="btn-default" data-input-el="#requestPicker" data-form-el="#requestPickerForm"
                            data-jive-ui="jive/ui/typeahead/request_typeahead" method="post" name="editHost">
                            <tr>
                                <td style="width:100px;">
                                    <div class="coloredBox" style="background-color:rgba({$s.color},0.4);">{$s.instanceCount}</div>
                                </td>
                                <td style="width:400px;">
                                    <div>
                                        <input type="text" autocomplete="off" role="combobox" style="padding-left:10px;"
                                            placeholder="Name" value="{$s.name}" name="name" id="namePicker" class="form-control">
                                    </div>
                                </td>
                                <td>
                                    <input type="text" autocomplete="off" role="combobox" style="padding-left:10px;"
                                    placeholder="Description" value="{$s.description}" name="description" id="descriptionPicker" class="form-control">
                                </td>
                                <td>
                                    <input type="hidden" name="key" value="{$s.key}">
                                    <button title="Update" type="submit" name="action" value="update" class="btn btn-default"><span class="glyphicon glyphicon-save ladda-button"  data-spinner-color="#222" data-style="expand-right">&nbspUpdate</span></button>
                                    <button onclick="return confirm('Are you sure you want to delete?')" title="Remove" type="submit" name="action" value="remove" class="btn btn-default"><span class="glyphicon glyphicon-trash">&nbspRemove</span></button>
                                <td>
                            </tr>
                        </form>
                    {/foreach}
                </tbody>
            </table>
            <div class="btn-group" role="group" aria-label="...">
                <form method="post" action="/ui/services/import" enctype="multipart/form-data">
                    <div class="fileinput fileinput-new" data-provides="fileinput">
                        <span class="btn btn-default btn-file"><span>Browse...</span><input type="file" name="file"/></span>
                        <span class="fileinput-filename"></span><span class="fileinput-new">&nbsp;&nbsp;&nbsp;No file chosen&nbsp;&nbsp;&nbsp;</span>
                    </div>
                    <button title="Import" type="submit"  value="import" class="btn btn-default"><span class="glyphicon glyphicon-import">&nbsp;Import</span></button>
                </form>
            </div>
        </div>
    {/if}
{/template}
